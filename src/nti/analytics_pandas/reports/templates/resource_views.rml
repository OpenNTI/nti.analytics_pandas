<metal:block
	xmlns:tal="http://xml.zope.org/namespaces/tal"
	xmlns:metal="http://xml.zope.org/namespaces/metal"
	tal:define="options view/options">
	<!--
		TODO : fix report's cover
	-->
	<hr width="100%" />
	<setNextTemplate name="main"/>
	<nextPage />
	<tal:block tal:condition="python: options['has_data']">
		<h1 style="h1" fontSize="14" spaceBefore=".3in" spaceAfter=".3in">
			Total Resource Views
		</h1>
		<hr width="100%" />
		<illustration width="5in" height="3in"
					  tal:define="event options/data/resource_view_events/event_resource_views;
								  user_event options/data/resource_view_events/user_resource_views;
								  ratio_event options/data/resource_view_events/ratio_resource_views"
					  tal:condition="options/data/resource_view_events"
					  metal:use-macro="macro:three_plots_event">
		</illustration>
		
		<setNextTemplate name="main"/>
		<nextPage />
		<h1 style="h1" fontSize="14" spaceBefore=".3in" spaceAfter=".3in">
			Resource Views per Device Types
		</h1>
		<hr width="100%" />
		<illustration width="5in" height="3in"
					  tal:define="event options/data/resource_views_per_device_types/event_resource_views_per_device_types;
								  user_event options/data/resource_views_per_device_types/user_resource_views_per_device_types;
								  ratio_event options/data/resource_views_per_device_types/ratio_resource_views_per_device_types"
					  tal:condition="options/data/resource_views_per_device_types"
					  metal:use-macro="macro:three_plots_event">
		</illustration>
		
		<setNextTemplate name="main"/>
		<nextPage />
		<h1 style="h1" fontSize="14" spaceBefore=".3in" spaceAfter=".3in">
			Resource Views per Resource Types
		</h1>
		<hr width="100%" />
		<illustration width="5in" height="3in"
					  tal:define="event options/data/resource_views_per_resource_types/event_resource_views_per_resource_types;
								  user_event options/data/resource_views_per_resource_types/user_resource_views_per_resource_types;
								  ratio_event options/data/resource_views_per_resource_types/ratio_resource_views_per_resource_types"
					  tal:condition="options/data/resource_views_per_resource_types"
					  metal:use-macro="macro:three_plots_event">
		</illustration>
		
		<setNextTemplate name="main"/>
		<nextPage />
		<h1 style="h1" fontSize="14" spaceBefore=".3in" spaceAfter=".3in">
			Most active users viewing resources during time period
		</h1>
		<hr width="100%" />
		<illustration width="5in" height="3in"
					  tal:define="event options/data/resource_view_users/most_active_users_viewing_resources"
					  tal:condition="options/data/resource_view_users"
					  metal:use-macro="macro:one_plot_event">
		</illustration>
	</tal:block>
</metal:block>
